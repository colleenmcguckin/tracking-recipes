(function(){
  "use strict";

  angular.module("app").controller("recipesCtrl", function($scope, $http){

  var setup = function(){
      $http.get("/api/v1/recipes.json").then(function(response){
        $scope.recipes = response.data.recipes;
      });
    }
    setup();

    window.scope = $scope;

  });

}());

